{% from "nationalarchives/components/fieldset/macro.njk" import tnaFieldset %}
{% from "nationalarchives/components/time-input/time-input-hour.njk" import tnaTimeInputHourElement %}
{% from "nationalarchives/components/time-input/time-input-minute.njk" import tnaTimeInputMinuteElement %}
{% from "nationalarchives/components/time-input/time-input-second.njk" import tnaTimeInputSecondElement %}

{%- call tnaFieldset({
  headingLevel: params.headingLevel,
  headingSize: params.headingSize,
  id: params.id,
  legend: params.label,
  hint: params.hint,
  smallerHint: true,
  error: params.error,
  classes: params.formItemClasses,
  attributes: params.formItemAttributes
}) %}
  <div class="tna-time-input" id="{{ params.id }}">
    
    <div class="tna-time-input__wrapper">
      <input type="text" list="hours" inputmode="numeric" value="{{ params.value.hour }}">
      {# <datalist id="hours">
        {%- for hour in range(1, 13) %}
        <option value="{{ hour }}">{{ hour }}</option>
        {%- endfor %}
      </datalist> #}


      :
      <input type="text" list="minutes" inputmode="numeric" value="{{ params.value.minute }}">
      {# <datalist id="minutes">
        <option value="">--</option>
        {%- for minute in range(60) %}
        <option value="{{ minute }}">{{ minute }}</option>
        {%- endfor %}
      </datalist> #}
    </div>

    <label for="am">
      <input type="radio" id="am" name="am_pm" value="AM">
      AM
    </label>
    <label for="pm">
      <input type="radio" id="pm" name="am_pm" value="PM">
      PM
    </label>

    {# {{ tnaTimeInputHourElement(params) | indent(6) }}
    <span class="tna-time-input__separator" aria-hidden="true">:</span>
    {{ tnaTimeInputMinuteElement(params) | indent(6) }}
    <span class="tna-time-input__separator" aria-hidden="true">:</span>
    {{ tnaTimeInputSecondElement(params) | indent(6) }} #}
  </div>
{%- endcall %}
